@page
@model Test_Razor.Pages.EditarUsrModel
@{
    ViewData["Title"] = "Editar";
}

<div style="background-image: url(img/fondoAnimales.jpg)">
    <div class="container" style="background:white;">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="blogs">
                    <div class="text-center">
                        <h2>Editar Perfil</h2>
                    </div>
                    <hr>
                </div>
            </div>
        </div>
    </div>
    <div class="container" id="div" style="background:white;">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="border">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="container" style="padding:30px">
                            <input type="hidden" asp-for="Usuario.fecha" value=@Model.Usuario.fecha />
                            <input type="hidden" asp-for="Usuario.rut" value=@Model.Usuario.rut />
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-2">
                                        <label asp-for="Usuario.nombre"></label>
                                    </div>
                                    <div class="col-sm-4">
                                        <input asp-for="Usuario.nombre" class="form-control" placeholder="Pedro" />
                                    </div>
                                    <span asp-validation-for="Usuario.nombre" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-2">
                                        <label asp-for="Usuario.apellidos"></label>
                                    </div>
                                    <div class="col-sm-4">
                                        <input asp-for="Usuario.apellidos" class="form-control" placeholder="López Rodríguez" />
                                    </div>
                                    <span asp-validation-for="Usuario.apellidos" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-2">
                                        <label asp-for="Usuario.email"></label>
                                    </div>
                                    <div class="col-sm-4">
                                        <input asp-for="Usuario.email" class="form-control" type="email" placeholder="micorreo@proveedor.com" />
                                    </div>
                                    <span asp-validation-for="Usuario.email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-2">
                                        <label asp-for="Usuario.telefono"></label>
                                    </div>
                                    <div class="col-sm-4">
                                        <input asp-for="Usuario.telefono" class="form-control" placeholder="912345678" />
                                    </div>
                                    <span asp-validation-for="Usuario.telefono" class="text-danger"></span>
                                </div>
                            </div>

                            <!--Botones-->
                            <div class="form-group">
                                <div class="row aling-items-center">
                                    <div class="col-aling-self-center col-sm-6">
                                        <input type="submit" value="Editar" class="btn btn-primary form-control" />
                                        <a asp-page="Dashboard" class="btn btn-secondary form-control">Cancelar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $('#div').height($(window).height() - 280);
</script>
